<!-- bloc-9 -->
<div class="bloc bgc-anti-flash-white l-bloc" id="">
  <div class="container bloc-sm">
    <div class="row">
      <div class="row">

        <% @services.each do |service| %>
            <div class="col-md-3" id="listado_productos">
              <div class="thumbnail">
                <%= link_to service do %>
                    <%= image_tag service.img.url(:large), :class => "img-responsive center-block img-frame prod" %>
                    <div class="caption">
                      <h5 class="tc-onyx">
                        <%= service.name %>
                      </h5>
                    </div>
                <% end %>
                <% if admin_signed_in? %>
                    <%= link_to 'Ver', service, :class => "tc-onyx btn btn-default btn-xs" %>
                    <%= link_to 'Editar', edit_service_path(service), :class => "tc-onyx btn btn-default btn-xs" %>
                    <%= link_to 'Eliminar', service, method: :delete, data: {confirm: 'Estas seguro?'}, :class => "tc-onyx btn btn-default btn-xs" %>
                    </div>
                <% else %>
                <% end %>
                </div>
            </div>
        <% end %>
    </div>
  </div>
</div>
</div>
<!-- bloc-9 END -->





