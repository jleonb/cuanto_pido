  <div class="container bloc-lg">
    <div class="row">
      <div class="col-sm-8 col-md-offset-2 text-center">
        <div class="embed-responsive embed-responsive-16by9 fadeIn animDelay02 animated">
          <iframe src="https://player.vimeo.com/video/111507117" frameborder="0" class="embed-responsive-item fadeIn animDelay02 animated">
          </iframe>
        </div>
      </div>
