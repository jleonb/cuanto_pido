<!-- last-add -->
<div class="bloc l-bloc" id="last-add">
  <div class="container bloc-lg">
    <div class="row">
      <div class="col-sm-12">
        <h3 class="mg-md text-center tc-orange">
          Los más buscados
        </h3>
        <div class="owl-carousel text-center">
          <% @products.all.order("id desc").limit(6).each do |d| %>
              <%= link_to d do %>
                  <%= image_tag d.img.url(:large), :class => "img-responsive center-block img-frame prod" %>
              <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
