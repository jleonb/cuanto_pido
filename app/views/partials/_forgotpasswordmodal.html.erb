<div class="modal fade" tabindex="-1" role="dialog" id="forgot">
  <div class="modal-dialog">
    <div class="panel">
      <div class="panel-heading bgc-charcoal">
        <h4 class="mg-clear tc-white text-center">
        ¿OLVIDO SU CONTRASEÑA?
        </h4>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <%= f.label :email %> <br>
          <%= f.email_field :email, autofocus: true %> <br>
        </div>
        <div class="actions">
          <br>
          <%= f.submit "Enviame las instrucciones de recuperación", :class => "btn   btn-sq btn-charcoal" %>
        </div>
        <% end %>
        <p>
          <%= render "devise/shared/links" %>
        </p>
      </div>
    </div>
  </div>
</div>