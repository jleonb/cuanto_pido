<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" id="login">
  <div class="modal-dialog">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="panel bgc-outer-space panel-rd">
        <div class="panel-heading bgc-platinum">
          <%= image_tag "https://s3-us-west-2.amazonaws.com/cuantopido/user.png", :width => "80", :alt => "user", :class => "img-responsive center-block" %>
        </div>
        <div class="panel-body">
          <form id="form_1247" novalidate>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, :placeholder => "nombre de usuario", :class => "form-control" %>
            </div>
          </form>
          <form id="form_361" novalidate>
            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "contraseña" %>
            </div>
            <div class="checkbox">
              <label>
                <% if devise_mapping.rememberable? -%>
                    <p><%= f.check_box :remember_me %><string>Recordar</string></p>
                <% end -%>
              </label>
            </div>
            <%= f.submit "Ingresar", :class => "tc-onyx btn wire-btn-portland-orange btn-wire form-control mg-sm" %>
          </form>
          <div class="row">
            <br>
            <div class="col-md-6">
              <%= link_to "http://www.facebook.com" do %>
                <%= image_tag "is_facebook.png", :class => "img-responsive center-block", :alt => "logo", :width => "130" %>
              <% end %>  
            </div>
            <div class="col-md-6">
              <%= link_to "http://www.twitter.com" do %>
              <%= image_tag "is_twitter.png", :class => "img-responsive center-block", :alt => "logo", :width => "130" %>
          <% end %>
            </div>
          </div>
        </div>
        <div class="panel-footer bgc-platinum">
          <br>
          <br>
          <div class="row">
            <div class="col-sm-6">
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "Olvidó su contraseña?", new_password_path(resource_name) %><br />
              <% end -%>
            </div>
            <div class="col-sm-6 actions">
              <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                  <%= link_to "Registrarse", new_registration_path(resource_name), :class => "pull-right" %><br />
              <% end -%>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->



